<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/bg_register">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_back2"
        android:drawableStart="@drawable/ic_back_register"
        android:drawableLeft="@drawable/ic_back_register"
        android:background="@android:color/transparent"
        android:paddingStart="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="0dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sign_up"
            android:text="@string/sign_up"
            android:layout_toRightOf="@id/b_back2"
            android:layout_toEndOf="@id/b_back2"
            android:textSize="35sp"
            android:textColor="#2e4e7e"
            android:gravity="start"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/c_code2"
        android:drawableStart="@drawable/ic_lock"
        android:drawableLeft="@drawable/ic_lock"
        android:layout_above="@+id/sign_up2"
        android:paddingStart="100dp"
        android:paddingRight="100dp"
        android:paddingLeft="100dp"
        android:hint="@string/c_code"
        android:maxLength="15"
        android:inputType="none"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/u_name2"
        android:drawableStart="@drawable/ic_user"
        android:drawableLeft="@drawable/ic_user"
        android:layout_above="@+id/c_code2"
        android:paddingStart="100dp"
        android:paddingRight="100dp"
        android:paddingLeft="100dp"
        android:hint="@string/u_name"
        android:maxLength="15"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sign_up2"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:text="@string/sign_up"
        android:textSize="17sp"/>




</RelativeLayout>