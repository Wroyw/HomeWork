<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/bg_register">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/b_back2"
        android:drawableLeft="@drawable/ic_back_register"
        android:background="@android:color/transparent"
        android:paddingLeft="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/sign_in"
            android:text="注册"
            android:layout_toRightOf="@+id/b_back2"
            android:textSize="35sp"
            android:textColor="#2e4e7e"
            android:gravity="center"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/c_code2"
        android:drawableLeft="@drawable/ic_lock"
        android:layout_above="@+id/sign_in2"
        android:paddingLeft="100dp"
        android:hint="密码"
        android:maxLength="15"
        android:password="true"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/u_name2"
        android:drawableLeft="@drawable/ic_user"
        android:layout_above="@+id/c_code2"
        android:paddingLeft="100dp"
        android:hint="用户名"
        android:maxLength="15"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sign_in2"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:text="注册"
        android:textSize="17sp"/>




</RelativeLayout>